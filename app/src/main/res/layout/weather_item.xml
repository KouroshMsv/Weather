<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtAdptWeekdays"
        fontPath="fonts/Lato-Light.ttf"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="dsfgfdsdf"
        android:textColor="@color/lightText" />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/temp_lowest" />
    <TextView
        android:id="@+id/txtAdptLowTemp"
        fontPath="fonts/Lato-Light.ttf"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="34O"
        android:textColor="@color/lightText" />
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/temp_highest" />
    <TextView
        android:id="@+id/txtAdptHighTemp"
        fontPath="fonts/Lato-Light.ttf"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:text="34O"
        android:textColor="@color/lightText" />

    <ImageView

        android:id="@+id/imgAdpt"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />

</LinearLayout>